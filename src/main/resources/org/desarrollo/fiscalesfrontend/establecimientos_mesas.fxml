<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.desarrollo.fiscalesfrontend.controller.EstablecimientoMesas">
    <padding>
        <Insets bottom="15" left="20" right="20" top="15"> </Insets>
    </padding>
    <center>
        <VBox>
            <HBox spacing="20">
                <HBox alignment="TOP_LEFT" spacing="20" HBox.hgrow="ALWAYS">
                    <GridPane hgap="10" vgap="10">
                        <Label text="Establecimiento" GridPane.columnIndex="0" GridPane.rowIndex="0"> </Label>
                        <ComboBox fx:id="comboEstablecimientos" GridPane.columnIndex="1" GridPane.rowIndex="0"> </ComboBox>
                        <Label text="Mesa" GridPane.columnIndex="2" GridPane.rowIndex="0"> </Label>
                        <TextField fx:id="campoNumeroMesa" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="0"> </TextField>
                        <Button fx:id="btnAgregarMesa" onAction="#agregarMesa" text="Agregar mesa" GridPane.columnIndex="4" GridPane.rowIndex="0"> </Button>
                        <Label fx:id="etiquetaID" text="" GridPane.columnIndex="0" GridPane.rowIndex="1"> </Label>
                        <Label fx:id="valorID" textFill="#1c62da" GridPane.columnIndex="1" GridPane.rowIndex="1"> </Label>
                        <Label fx:id="nombreEstablecimiento" textFill="#1c62da" GridPane.columnIndex="2" GridPane.rowIndex="1"> </Label>
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </HBox>
            </HBox>
            <FlowPane fx:id="contenedorMesas" hgap="15" minHeight="200" prefWrapLength="600" vgap="15">
                <!--Aquí vamos agregando las mesas -->
            </FlowPane>
            <HBox alignment="CENTER_RIGHT" minHeight="60" spacing="20">
                <Button fx:id="btnGuardarMesas" onAction="#guardarMesasSeleccionas" text="Guardar mesas"> </Button>
                <Button fx:id="btnActualizarMesas" onAction="#actualizarMesasAsignadas" text="Actualizar mesas"> </Button>
                <Button fx:id="cancelarAsignacion" onAction="#limpiarCampos" text="Cancelar"> </Button>
            </HBox>
            <Label fx:id="msjExito" text="" textFill="#449416"> </Label>
            <Label text="En el menú desplegable figuran los establecimientos sin mesas asignadas. En la tabla los que tienen mesas asignadas" styleClass="aclaracion-establecimiento">
            <font>
               <Font size="11.0" />
            </font></Label>
            <TableView fx:id="tablaEstablecimientosMesas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="columnaIdEst" prefWidth="40" text="ID"> </TableColumn>
                    <TableColumn fx:id="columnaNombreEst" prefWidth="250" text="Establecimiento"> </TableColumn>
                    <TableColumn fx:id="columnaCantidadMesas" prefWidth="160" text="Cantidad de mesas"> </TableColumn>
                    <TableColumn fx:id="columnaMesaInicial" prefWidth="120" text="Desde la mesa"> </TableColumn>
                    <TableColumn fx:id="columnaMesaFinal" prefWidth="120" text="Hasta la mesa"> </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
